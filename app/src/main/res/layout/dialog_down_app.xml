<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:background="@drawable/shape_rect_round_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:paddingTop="30dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_dialog_loading" />


        <LinearLayout
            style="@style/ll_w_w_v"
            android:layout_width="180dp"
            android:layout_marginTop="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp">

                <TextView
                    style="@style/text_12_black_3"
                    android:text="更新进度" />

                <TextView
                    style="@style/text_12_black_3"
                    android:text="更新进度" />

                <TextView
                    android:id="@+id/tv_progress"
                    style="@style/text_12_black_1"
                    android:layout_alignParentRight="true"
                    android:text="00%" />

            </RelativeLayout>

            <com.tajiang.leifeng.view.progressbar.RoundCornerProgressBar
                android:id="@+id/progress_version"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                app:rcBackgroundColor="#eeeeee"
                app:rcBackgroundPadding="2dp"
                app:rcMax="100"
                app:rcProgress="0"
                app:rcProgressColor="@color/text_black_1"
                app:rcRadius="20dp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>