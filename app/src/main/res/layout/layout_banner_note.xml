<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:TJMarqueeTextView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/base_m_w"
        android:background="@color/common_title_white">

        <LinearLayout
            android:id="@+id/rl_item_root"
            style="@style/ll_m_w_h"
            android:paddingBottom="@dimen/common_margin_5">

            <RelativeLayout
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginLeft="@dimen/common_margin_5"
                android:layout_marginTop="@dimen/common_margin_5">

                <ImageView
                    android:id="@+id/iv_pic_store_banner"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_empty_good" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/common_margin_5"
                android:paddingTop="@dimen/common_margin_5">

                <TextView
                    android:id="@+id/tv_deliver_store_name"
                    style="@style/text_14_black_5"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/common_margin_8"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="阿贤黄萌鸡米饭阿贤黄萌鸡米饭阿贤黄萌鸡米饭&#38;北京炸鸡"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_dely_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/shop_delivery" />

                    <TextView
                        android:id="@+id/tv_deliver_amount"
                        style="@style/text_12_black_5"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="满15元起送"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!-- 活动，赠送，优惠等。。。 -->
                <LinearLayout
                    android:id="@+id/ll_action_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/common_margin_10"
                    android:paddingTop="@dimen/common_margin_10">

                    <TextView
                        android:id="@+id/tv_noteMsgMsgHome"
                        style="@style/text_12_black_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center_vertical"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textColor="@color/text_black_1" />


                </LinearLayout>

                <!--<TextView-->
                <!--style="@style/text_12_black_1"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:maxLines="1"-->
                <!--android:ellipsize="end"-->
                <!--android:text="阿贤黄萌鸡米饭&#38;北京炸鸡"/>-->

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_transparent_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent_half_white"
            android:orientation="horizontal"
            android:visibility="visible"></LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/rect_noteMsgHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="visible">

        <!--<ImageView-->
        <!--android:layout_width="14dp"-->
        <!--android:layout_height="14dp"-->
        <!--android:src="@drawable/icon_msg" />-->
        <LinearLayout
            android:id="@+id/ll_action_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_action_1"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/icon_user_invite" />

            <TextView
                android:id="@+id/tv_action_1"
                style="@style/text_12_black_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="满减活动"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_action_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/common_margin_3"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_action_2"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/icon_user_invite" />

            <TextView
                android:id="@+id/tv_action_2"
                style="@style/text_12_black_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="满减活动"
                android:textColor="@color/black" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>