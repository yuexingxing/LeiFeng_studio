<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="220dp"
        android:background="@drawable/shape_rect_round_white"
        android:gravity="clip_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/img_dialog_updata_tip" />

        <ScrollView
            style="@style/base_m_w"
            android:layout_height="0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDescriptionVision"
                    style="@style/text_12_black_2"
                    android:text="1.修复了各种Bug" />

            </LinearLayout>
        </ScrollView>


        <View style="@style/driver_h" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_negetiveHintDialog"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/slt_rect_white"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/text_black_2"
                android:textSize="14sp" />

            <View style="@style/driver_v" />

            <TextView
                android:id="@+id/tv_positiveHintDialog"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/slt_rect_white"
                android:gravity="center"
                android:text="马上更新"
                android:textColor="@color/com_green"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>