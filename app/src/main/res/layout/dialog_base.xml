<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/base_m_m"
    android:background="@color/gray">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect_round_white"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/rect_contectBaseDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"></FrameLayout>


        <LinearLayout
            android:id="@+id/rect_chooseBaseDialog"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_negetiveBaseDialog"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/slt_rect_white"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/text_black_2"
                android:textSize="14sp" />

            <View style="@style/driver_v" />

            <TextView
                android:id="@+id/tv_positiveBaseDialog"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/slt_rect_white"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/com_green"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>