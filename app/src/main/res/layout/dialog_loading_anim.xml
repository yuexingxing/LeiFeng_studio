<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/base_w_w">

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/shape_rect_round_white"
        android:gravity="center"
        android:orientation="vertical">

        <com.tajiang.leifeng.view.circularprogressview.CircularProgressView
            android:id="@+id/cpv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cpv_animAutostart="true"
            app:cpv_color="@color/com_green"
            app:cpv_indeterminate="true"
            app:cpv_thickness="3dp" />

        <TextView
            style="@style/text_12_green"
            android:layout_marginTop="5dp"
            android:text="正在加载" />
    </LinearLayout>

</FrameLayout>