<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/com_root_layout_ll_gray">

    <LinearLayout
        style="@style/ll_m_w_v"
        android:layout_marginTop="16dp"
        android:background="@color/white">

        <LinearLayout
            style="@style/ll_m_w_h_c"
            android:layout_height="50dp"
            android:paddingLeft="10dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/login_icon_username"/>

            <EditText
                android:id="@+id/et_phoneRegister"
                style="@style/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:hint="输入您的手机号码"/>
        </LinearLayout>

        <View
            style="@style/driver_h"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            style="@style/ll_m_w_h_c"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/login_icon_code"/>

            <EditText
                android:id="@+id/iv_code"
                style="@style/et_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:hint="请输入验证码"/>

            <ImageView
                android:id="@+id/code"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginRight="6dp"/>
        </LinearLayout>

        <View
            style="@style/driver_h"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            style="@style/ll_m_w_h_c"
            android:layout_height="50dp"
            android:paddingLeft="10dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/login_icon_code"/>

            <EditText
                android:id="@+id/et_codeRegister"
                style="@style/et_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:hint="请输入验证码"/>

            <com.tajiang.leifeng.view.CountDownButton
                android:id="@+id/btn_getCodeRegister"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginRight="6dp"/>
        </LinearLayout>

        <View
            style="@style/driver_h"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            style="@style/ll_m_w_h_c"
            android:layout_height="50dp"
            android:paddingLeft="10dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/login_icon_password"/>

            <EditText
                android:id="@+id/et_pswRegister"
                style="@style/et_psd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"/>

            <include layout="@layout/layout_psw_see_able"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/ll_m_w_h_c"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:paddingLeft="10dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/icon_register_code"/>

        <EditText
            android:id="@+id/etCodeInviteRegister"
            style="@style/base_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:hint="邀请码(没有可不填)"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        style="@style/btn_green"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:text="注册"/>

    <LinearLayout
        style="@style/ll_w_w_h"
        android:padding="6dp">

        <TextView
            style="@style/text_12_black_2"
            android:text="注册代表同意"/>

        <TextView
            style="@style/text_12_green"
            android:text="《用户注册协议》"/>

    </LinearLayout>

</LinearLayout>