<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center" >

    <LinearLayout
        android:id="@+id/pull_to_load_footer_content"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:padding="0dp"
        android:gravity="center" >

        <ProgressBar
            android:id="@+id/pull_to_load_footer_progressbar"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:visibility="visible"
            android:indeterminateDrawable="@anim/update_loading_progressbar_anim"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/pull_to_load_footer_hint_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上拉加载更多"
            android:textColor="@color/text_loading_gray"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>

