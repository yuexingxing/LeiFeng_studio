<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    style="@style/com_root_layout_ll_gray">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/common_title_white">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/user_message_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:background="@drawable/mine_news" />

            <TextView
                style="@style/text_16_white"
                android:layout_centerInParent="true"
                android:text="我的"
                android:textSize="18sp" />
        </RelativeLayout>
    </FrameLayout>


    <ScrollView
        style="@style/base_m_m"
        android:fillViewport="false">

        <LinearLayout style="@style/ll_m_w_v">

            <RelativeLayout
                android:id="@+id/view_inforUser"
                style="@style/base_m_w"
                android:layout_height="102dp"
                android:background="@drawable/slt_rect_white"
                android:paddingLeft="@dimen/common_padding"
                android:paddingRight="@dimen/common_padding">

                <LinearLayout
                    style="@style/ll_w_w_h_c"
                    android:layout_centerVertical="true">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/iv_iconUser"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_circle_white"
                        fresco:roundAsCircle="true"
                        fresco:roundingBorderColor="@color/white"
                        fresco:roundingBorderWidth="2dp" />

                    <TextView
                        android:id="@+id/tv_nameUser"
                        style="@style/text_14_black_1"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="4dp"
                        android:text="未设置" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_enter_gray" />


            </RelativeLayout>

            <View style="@style/driver_h" />

            <LinearLayout
                style="@style/ll_m_w_h"
                android:layout_height="60dp"
                android:background="@color/white"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/view_walletUser"
                    style="@style/ll_w_w_v_c"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/slt_rect_white"
                    android:clickable="true"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvMoneyOverUser"
                        style="@style/text_14_black_1"
                        android:text="￥ 0.00"
                        android:textSize="20sp" />

                    <TextView
                        style="@style/text_12_black_5"
                        android:layout_marginTop="4dp"
                        android:text="余额" />

                </LinearLayout>

                <View
                    style="@style/driver_v"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp" />

                <LinearLayout
                    android:id="@+id/view_couponUser"
                    style="@style/ll_w_w_v_c"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/slt_rect_white"
                    android:clickable="true"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvNumCouponUser"
                        style="@style/text_14_black_1"
                        android:text="0"
                        android:textSize="20sp" />

                    <TextView
                        style="@style/text_12_black_5"
                        android:layout_marginTop="4dp"
                        android:text="优惠券" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/ll_m_m_v"
                android:layout_marginTop="12dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/view_adressUser"
                        style="@style/base_m_w"
                        android:layout_height="50dp"
                        android:background="@drawable/slt_rect_white"
                        android:paddingLeft="@dimen/common_padding"
                        android:paddingRight="12dp">

                        <LinearLayout
                            style="@style/ll_w_w_h_c"
                            android:layout_centerVertical="true">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/icon_user_adress" />

                            <TextView
                                style="@style/text_14_black_5"
                                android:layout_marginLeft="22dp"
                                android:text="我的地址" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/ll_w_w_h_c"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/icon_enter_gray" />
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        style="@style/driver_h"
                        android:layout_marginLeft="@dimen/common_padding"
                        android:layout_marginRight="@dimen/common_padding" />

                    <RelativeLayout
                        android:id="@+id/viewInviteUser"
                        style="@style/base_m_w"
                        android:layout_height="50dp"
                        android:background="@drawable/slt_rect_white"
                        android:paddingLeft="@dimen/common_padding"
                        android:paddingRight="12dp">

                        <LinearLayout
                            style="@style/ll_w_w_h_c"
                            android:layout_centerVertical="true">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/icon_user_invite" />

                            <TextView
                                style="@style/text_14_black_5"
                                android:layout_marginLeft="22dp"
                                android:text="邀请好友" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/ll_w_w_h_c"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true">

                            <TextView
                                style="@style/text_14_black_1"
                                android:text="送优惠券"
                                android:textColor="@color/red_orange" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/icon_enter_gray" />
                        </LinearLayout>
                    </RelativeLayout>

                    <View style="@style/driver_h" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@color/white"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/rect_adviceServiceCenter"
                        style="@style/base_m_w"
                        android:layout_height="50dp"
                        android:background="@drawable/slt_rect_white"
                        android:paddingLeft="@dimen/common_padding"
                        android:paddingRight="12dp">

                        <LinearLayout
                            style="@style/ll_w_w_h_c"
                            android:layout_centerVertical="true">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/mine_feedback" />

                            <TextView
                                style="@style/text_14_black_5"
                                android:layout_marginLeft="22dp"
                                android:text="意见反馈" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/ll_w_w_h_c"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/icon_enter_gray" />
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        style="@style/driver_h"
                        android:layout_marginLeft="@dimen/common_padding"
                        android:layout_marginRight="@dimen/common_padding" />

                    <RelativeLayout
                        android:id="@+id/rect_questionServiceCenter"
                        style="@style/base_m_w"
                        android:layout_height="50dp"
                        android:background="@drawable/slt_rect_white"
                        android:paddingLeft="@dimen/common_padding"
                        android:paddingRight="@dimen/common_padding">

                        <LinearLayout
                            style="@style/ll_w_w_h_c"
                            android:layout_centerVertical="true">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/icon_user_common_issue" />

                            <TextView
                                style="@style/text_14_black_5"
                                android:layout_marginLeft="22dp"
                                android:text="常见问题" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/ll_w_w_h_c"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:paddingLeft="42dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/icon_enter_gray" />
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        style="@style/driver_h"
                        android:layout_marginLeft="@dimen/common_padding"
                        android:layout_marginRight="@dimen/common_padding" />

                    <RelativeLayout
                        android:id="@+id/view_setUser"
                        style="@style/base_m_w"
                        android:layout_height="50dp"
                        android:background="@drawable/slt_rect_white"
                        android:paddingLeft="@dimen/common_padding"
                        android:paddingRight="12dp">

                        <LinearLayout
                            style="@style/ll_w_w_h_c"
                            android:layout_centerVertical="true">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/icon_set" />

                            <TextView
                                style="@style/text_14_black_5"
                                android:layout_marginLeft="22dp"
                                android:text="设置" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/ll_w_w_h_c"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/icon_enter_gray" />
                        </LinearLayout>
                    </RelativeLayout>


                    <View
                        style="@style/driver_h"
                        android:layout_marginLeft="84dp"
                        android:layout_marginRight="12dp"
                        android:visibility="gone" />


                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/contact_customer_service"
                    style="@style/base_m_w"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/slt_rect_white"
                    android:gravity="center"
                    android:paddingLeft="@dimen/common_padding"
                    android:paddingRight="12dp">

                    <LinearLayout
                        style="@style/ll_w_w_v_c"
                        android:layout_centerInParent="true">

                        <TextView
                            style="@style/text_14_black_5"
                            android:drawableLeft="@drawable/icon_user_customer_service"
                            android:drawablePadding="10dp"
                            android:text="联系客服:400-9920-278" />

                        <TextView
                            style="@style/text_14_black_5"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="工作时间:10:30-19:00"/>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/viewAttestateUser"
                    style="@style/base_m_w"
                    android:layout_height="50dp"
                    android:background="@drawable/slt_rect_white"
                    android:paddingRight="12dp"
                    android:visibility="gone">

                    <LinearLayout
                        style="@style/ll_w_w_h_c"
                        android:layout_centerVertical="true">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/icon_user_attestate" />

                        <TextView
                            style="@style/text_14_black_1"
                            android:layout_marginLeft="22dp"
                            android:text="身份认证" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/ll_w_w_h_c"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icon_enter_gray" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    style="@style/driver_h"
                    android:layout_marginBottom="30dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>