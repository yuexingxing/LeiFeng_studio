<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              style="@style/base_w_w"
              android:background="@drawable/shape_rect_round_white">

    <LinearLayout
        style="@style/ll_m_m_v"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_picGoodDetial"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            fresco:placeholderImage="@drawable/icon_empty_good"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:roundBottomLeft="false"
            fresco:roundBottomRight="false"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundedCornerRadius="3dp"/>

        <RelativeLayout
            style="@style/base_m_w"
            android:padding="12dp">

            <LinearLayout style="@style/ll_m_w_v">

                <TextView
                    android:id="@+id/tv_nameFoodDetailDialog"
                    style="@style/text_14_black_1"
                    android:text="海鲜全套餐"/>

                <LinearLayout
                    style="@style/ll_w_w_h"
                    android:layout_marginTop="12dp">

                    <TextView
                        style="@style/text_14_green"
                        android:text="￥"/>

                    <TextView
                        android:id="@+id/tv_priceFoodDetailDialog"
                        style="@style/text_14_green"
                        android:text="16.00"/>
                </LinearLayout>

                <LinearLayout style="@style/ll_w_w_h">

                    <TextView
                        style="@style/text_14_black_2"
                        android:layout_marginTop="12dp"
                        android:text="配餐："/>

                    <TextView
                        android:id="@+id/tv_groupFoodDetailDialog"
                        style="@style/text_14_black_3"
                        android:layout_marginTop="12dp"/>
                </LinearLayout>
            </LinearLayout>

            <com.tajiang.leifeng.view.NumControlView
                android:id="@+id/ncv_numFoodDetailDialog"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_saleOutFoodSelectDialog"
                style="@style/text_14_black_2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="已售完"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>