<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/base_w_w">

    <LinearLayout
        style="@style/ll_w_w_h_c"
        android:layout_width="300dp"
        android:background="@drawable/shape_rect_round_white"
        android:padding="18dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_user_order_call" />

        <LinearLayout
            style="@style/ll_w_w_h_c"
            android:layout_width="0dp"
            android:layout_marginLeft="14dp"
            android:layout_weight="1"
            android:background="@drawable/shape_rect_round_gray_2">

            <EditText
                android:id="@+id/et_phoneAddDialog"
                style="@style/et_phone"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:hint="第一次使用请添加号码"
                android:paddingLeft="6dp"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_submitPhoneAddDialog"
                android:layout_width="52dp"
                android:layout_height="30dp"
                android:background="@drawable/slt_btn_rect_green"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>
</FrameLayout>