<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/rectPsdPayBg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        style="@style/ll_m_w_v_c"
        android:layout_gravity="bottom"
        android:background="@color/white">

        <TextView
            style="@style/text_14_black_2"
            android:layout_marginTop="18dp"
            android:text="输入雷锋钱包支付密码" />

        <com.jungly.gridpasswordview.GridPasswordView
            android:id="@+id/gpvNewPswPay"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="18dp"
            app:gpvLineColor="@color/text_black_2" />

        <TextView
            android:id="@+id/rectForgetPsw"
            style="@style/text_12_green"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="忘记密码" />

        <View
            android:layout_width="match_parent"
            android:layout_height="260dp" />

    </LinearLayout>


</LinearLayout>